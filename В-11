	if (((d >= 21) && (d <= 31) && (m == 3)) || ((d >= 1) && (d <= 20) && (m == 4)))
	{
		i = 0;
	}

	if (((d >= 21) && (d <= 30) && (m == 4)) || ((d >= 1) && (d <= 21) && (m == 5)))
	{
		i = 1;
	}

	if (((d >= 22) && (d <= 31) && (m == 5)) || ((d >= 1) && (d <= 21) && (m == 6)))
	{
		i = 2;
	}

	if (((d >= 22) && (d <= 30) && (m == 6)) || ((d >= 1) && (d <= 23) && (m == 7)))
	{
		i = 3;
	}

	if (((d >= 24) && (d <= 31) && (m == 7)) || ((d >= 1) && (d <= 23) && (m == 8)))
	{
		i = 4;
	}

	if (((d >= 24) && (d <= 31) && (m == 8)) || ((d >= 1) && (d <= 23) && (m == 9)))
	{
		i = 5;
	}

	if (((d >= 24) && (d <= 30) && (m == 9)) || ((d >= 1) && (d <= 23) && (m == 10)))
	{
		i = 6;
	}

	if (((d >= 24) && (d <= 31) && (m == 10)) || ((d >= 1) && (d <= 22) && (m == 11)))
	{
		i = 7;
	}

	if (((d >= 23) && (d <= 30) && (m == 11)) || ((d >= 1) && (d <= 21) && (m == 12)))
	{
		i = 8;
	}

	if (((d >= 22) && (d <= 31) && (m == 12)) || ((d >= 1) && (d <= 20) && (m == 1)))
	{
		i = 9;
	}

	if (((d >= 21) && (d <= 31) && (m == 1)) || ((d >= 1) && (d <= 19) && (m == 2)))
	{
		i = 10;
	}

	if (((d >= 20) && (d <= 29) && (m == 2)) || ((d >= 1) && (d <= 20) && (m == 3)))
	{
		i = 11;
	}

	

	

	switch (i)
	{
	case 0: printf("\n\tЗнак Зодiака: "); std::cout << mz[0];	break;
	case 1: printf("\n\tЗнак Зодiака: "); std::cout << mz[1];	break;
	case 2: printf("\n\tЗнак Зодiака: "); std::cout << mz[2];	break;
	case 3: printf("\n\tЗнак Зодiака: "); std::cout << mz[3];	break;
	case 4: printf("\n\tЗнак Зодiака: "); std::cout << mz[4];	break;
	case 5: printf("\n\tЗнак Зодiака: "); std::cout << mz[5];	break;
	case 6: printf("\n\tЗнак Зодiака: "); std::cout << mz[6];	break;
	case 7: printf("\n\tЗнак Зодiака: "); std::cout << mz[7];	break;
	case 8: printf("\n\tЗнак Зодiака: "); std::cout << mz[8];	break;
	case 9: printf("\n\tЗнак Зодiака: "); std::cout << mz[8];	break;
	case 10: printf("\n\tЗнак Зодiака: "); std::cout << mz[10];	break;
	case 11: printf("\n\tЗнак Зодiака: "); std::cout << mz[11];	break;
	case 12:printf("\n\tЦiєї дати не iснує ");
